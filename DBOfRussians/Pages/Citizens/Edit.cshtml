@page "{id:min(1)?}/{handler?}"
@model DBOfRussians.Pages.Citizens.EditModel
@{
    

    ViewData["Title"] = "Edit";

}
<h1 class="text-center" >Редактирование данных гражданина</h1>
<form method="post" asp-page-handler="OnPost" class="mt-3" enctype="multipart/form-data">

    <table class="table td">


        <tr>
            <td class="text-right">Id: </td>
            <td>@Model.Citizen.Id</td>
        </tr>

        <tr>
            <td class="text-right">Имя: </td>
            <td><input asp-for="Citizen.Name" placeholder="@Model.Citizen.Name " /></td>
        </tr>

        <tr>
            <td class="text-right">Фамилия: </td>
            <td><input asp-for="Citizen.Surnames" placeholder="@Model.Citizen.Surnames " /></td>
        </tr>

        <tr>

            <td class="text-right">Отчество: </td>
            <td><input asp-for="Citizen.Patronymic" placeholder="@Model.Citizen.Patronymic " /></td>
        </tr>

        <tr>

            <td class="text-right">СНИЛС: </td>
            <td><input asp-for="Citizen.SNILS" placeholder="@Model.Citizen.SNILS " /></td>
        </tr>

        <tr>

            <td class="text-right">ИНН: </td>
            <td><input asp-for="Citizen.INN" placeholder="@Model.Citizen.INN " /></td>
        </tr>

        <tr>
            <td class="text-right">Дата рождения: </td>
            <td><input asp-for="Citizen.DateOfBirth" placeholder="@Model.Citizen.DateOfBirth " /></td>
        </tr>

        <tr>
            <td class="text-right">Дата смерти: </td>
            <td><input asp-for="Citizen.DateOfDeath" placeholder="@Model.Citizen.DateOfDeath " /></td>
        </tr>
    </table>
    <hr />
    

    <div class="row text-center">
        <div class="col">
            <button type="submit" class="btn btn-success ">Update</button>
            <a class="btn btn-danger" asp-page="/Citizens/Citizens">Cancel</a>
        </div>
    </div>




</form>
